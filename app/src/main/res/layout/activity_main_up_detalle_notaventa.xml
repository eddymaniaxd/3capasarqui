        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/nombre_producto_detalle"
        android:layout_width="109dp"
        android:layout_height="30dp"
